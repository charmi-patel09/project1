@model JsonCrudApp.Models.AdminUser
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0">Login</h3>
                    <p class="text-muted small mb-0 mt-1">Please sign in to your account</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    @ViewBag.ErrorMessage
                                </div>
                                <a asp-action="ForgotPassword"
                                    class="btn btn-sm btn-outline-danger border-0 fw-bold py-0">Forgot?</a>
                            </div>
                        </div>
                    }

                    <form asp-action="Login" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted small fw-bold">Email</label>
                            <input asp-for="Email" class="form-control bg-light border-0 shadow-none py-2"
                                placeholder="Enter your email" required autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted small fw-bold">Password</label>
                            <input asp-for="Password" type="password"
                                class="form-control bg-light border-0 shadow-none py-2"
                                placeholder="Enter your password" required autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="text-end mb-4">
                            <a asp-action="ForgotPassword"
                                class="text-primary extra-small text-decoration-none fw-bold">Forgot Password?</a>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-primary btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%); font-size: 1rem;">
                                <span>Login</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                    <div class="mb-2">
                        <span class="text-muted extra-small">Don't have an account?</span>
                        <a asp-action="SignUp"
                            class="text-primary extra-small text-decoration-none fw-bold">Register</a>
                    </div>
                    <hr class="my-2 opacity-25">
                    <span class="text-muted extra-small">Â© @DateTime.Now.Year
                        <span>Secure Portal</span></span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.75rem;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.01);
    }

    .form-control:focus {
        background-color: #fff !important;
        border: 1px solid #4e54c8 !important;
    }

    .btn-primary:hover {
        opacity: 0.9;
    }
</style>
<style>
    /* Dark Mode Support */
    [data-theme='dark'] .login-page {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    [data-theme='dark'] .card {
        background-color: #1e1e2d !important;
        color: #e2e8f0;
    }

    [data-theme='dark'] .card-header {
        background-color: #1a1a27 !important;
        border-bottom-color: #2d2d3f !important;
    }

    [data-theme='dark'] .card-header h3 {
        color: #fff !important;
    }

    [data-theme='dark'] .card-body {
        background-color: #1e1e2d !important;
    }

    [data-theme='dark'] .card-footer {
        background-color: #1a1a27 !important;
    }

    [data-theme='dark'] .text-muted {
        color: #94a3b8 !important;
    }

    [data-theme='dark'] .form-control {
        background-color: #2d2d3f !important;
        color: #fff !important;
        border-color: #3f3f50;
    }

    [data-theme='dark'] .form-control::placeholder {
        color: #64748b;
    }

    [data-theme='dark'] .bg-light {
        background-color: #1a1a27 !important;
    }

    [data-theme='dark'] .bg-white {
        background-color: #1e1e2d !important;
    }
</style>

@section Scripts {
    <script>
        function forceClear() {
            var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
            inputs.forEach(function (input) {
                input.value = '';
                // Additionally trigger input event to clear any framework bindings if present
                input.dispatchEvent(new Event('input', { bubbles: true }));
            });
        }

        window.onload = function () {
            forceClear();
            // Re-run after 200ms and 500ms to catch browser persistent autofills
            setTimeout(forceClear, 200);
            setTimeout(forceClear, 500);
        };
    </script>
}
