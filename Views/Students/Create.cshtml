@model JsonCrudApp.Models.Student
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateStudent"];
    ViewData["TitleKey"] = "CreateStudent";
}

<h1 data-i18n="CreateStudent">@Localizer["CreateStudent"]</h1>

<h4 data-i18n="Student">@Localizer["Student"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label" data-i18n="Name">@Localizer["Name"]</label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label" data-i18n="Email">@Localizer["Email"]</label>
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label" data-i18n="Password">@Localizer["Password"]</label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Age" class="control-label" data-i18n="Age">@Localizer["Age"]</label>
                <input asp-for="Age" class="form-control" autocomplete="off" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Course" class="control-label" data-i18n="Course">@Localizer["Course"]</label>
                <input asp-for="Course" class="form-control" autocomplete="off" />
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" data-i18n="Create" />
                <a asp-action="Index" class="btn btn-secondary" data-i18n="BackToList">@Localizer["BackToList"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function forceClear() {
            var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
            inputs.forEach(function (input) {
                input.value = '';
                input.dispatchEvent(new Event('input', { bubbles: true }));
            });
        }

        window.onload = function () {
            forceClear();
            setTimeout(forceClear, 200);
            setTimeout(forceClear, 500);
        };
    </script>
}
