@model JsonCrudApp.Models.Student
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteUser"];
    ViewData["TitleKey"] = "DeleteUser";
}

<h1 data-i18n="Delete">@Localizer["Delete"]</h1>

<h3 data-i18n="AreYouSureYouWantToDeleteThis">@Localizer["AreYouSureYouWantToDeleteThis"]</h3>
<div>
    <h4 data-i18n="User">@Localizer["User"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" data-i18n="Name">
            @Localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" data-i18n="Email">
            @Localizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2" data-i18n="Age">
            @Localizer["Age"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2" data-i18n="Course">
            @Localizer["Course"]
        </dt>
        <dd class="col-sm-10">
            <span data-i18n="@(Model.Course ?? "")">@Localizer[Model.Course ?? ""]</span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" data-i18n="Delete" /> |
        <a asp-action="Index" class="btn btn-secondary" data-i18n="BackToList">@Localizer["BackToList"]</a>
    </form>
</div>
