@model JsonCrudApp.Models.SignUpViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SignUp"];
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0" data-i18n="SignUp">@Localizer["SignUp"]</h3>
                    <p class="text-muted small mb-0 mt-1" data-i18n="CreateYourAccount">@Localizer["CreateYourAccount"]
                    </p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="SignUp" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted small fw-bold"
                                data-i18n="EmailAddress">@Localizer["EmailAddress"]</label>
                            <input asp-for="Email" class="form-control bg-light border-0 shadow-none py-2"
                                data-i18n-placeholder="EnterEmail" placeholder="@Localizer["EnterEmail"]" required
                                autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted small fw-bold"
                                data-i18n="Password">@Localizer["Password"]</label>
                            <input asp-for="Password" type="password"
                                class="form-control bg-light border-0 shadow-none py-2"
                                data-i18n-placeholder="EnterPassword" placeholder="@Localizer["EnterPassword"]" required
                                autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label text-muted small fw-bold"
                                data-i18n="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
                            <input asp-for="ConfirmPassword" type="password"
                                class="form-control bg-light border-0 shadow-none py-2"
                                data-i18n-placeholder="ConfirmPasswordPlaceholder"
                                placeholder="@Localizer["ConfirmPasswordPlaceholder"]" required autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger extra-small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-primary btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); font-size: 1rem;">
                                <span data-i18n="SignUp">@Localizer["SignUp"]</span>
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted small mb-0">
                            <span data-i18n="AlreadyHaveAnAccount">@Localizer["AlreadyHaveAnAccount"]</span>
                            <a asp-action="Login" class="text-primary fw-bold text-decoration-none"
                                data-i18n="Login">@Localizer["Login"]</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.7rem;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.01);
    }

    .form-control:focus {
        background-color: #fff !important;
        border: 1px solid #2575fc !important;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.onload = function () {
            // Only clear if there are no validation errors visible
            if (document.querySelectorAll('.field-validation-error').length === 0) {
                var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
                inputs.forEach(function (input) {
                    input.value = '';
                });
            }
        };
    </script>
}
