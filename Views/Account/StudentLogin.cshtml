@model JsonCrudApp.Models.AdminUser
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["UserLogin"];
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0" data-i18n="UserLogin">@Localizer["UserLogin"]</h3>
                    <p class="text-muted small mb-0 mt-1" data-i18n="PleaseSignInWithUserCredentials">
                        @Localizer["PleaseSignInWithUserCredentials"]</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    @ViewBag.ErrorMessage
                                </div>
                                <a asp-action="ForgotPassword" class="btn btn-sm btn-outline-danger border-0 fw-bold py-0"
                                    data-i18n="Forgot">@Localizer["Forgot"]</a>
                            </div>
                        </div>
                    }

                    <form asp-action="StudentLogin" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted small fw-bold"
                                data-i18n="UserEmail">@Localizer["UserEmail"]</label>
                            <input asp-for="Email" class="form-control shadow-none py-2"
                                data-i18n-placeholder="EnterEmail" placeholder="@Localizer["EnterEmail"]" required
                                autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted small fw-bold"
                                data-i18n="Password">@Localizer["Password"]</label>
                            <input asp-for="Password" type="password" class="form-control shadow-none py-2"
                                data-i18n-placeholder="EnterPassword" placeholder="@Localizer["EnterPassword"]" required
                                autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="text-end mb-4">
                            <a asp-action="ForgotPassword" class="text-success extra-small text-decoration-none fw-bold"
                                data-i18n="ForgotPassword">@Localizer["ForgotPassword"]</a>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-success btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); font-size: 1rem;">
                                <span data-i18n="Login">@Localizer["Login"]</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                    <span class="text-muted extra-small">Â© @DateTime.Now.Year <span
                            data-i18n="SecureUserPortal">@Localizer["SecureUserPortal"]</span></span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.75rem;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.01);
    }

    .form-control {
        background-color: #f8fafc !important;
        color: #0f172a !important;
        border: 1px solid #e2e8f0 !important;
        transition: all 0.2s ease-in-out !important;
        caret-color: #0f172a !important;
    }

    /* Standard Autofill for light mode */
    .form-control:-webkit-autofill,
    .form-control:-webkit-autofill:hover,
    .form-control:-webkit-autofill:focus,
    .form-control:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #f8fafc inset !important;
        -webkit-text-fill-color: #0f172a !important;
    }

    .form-control::placeholder {
        color: #94a3b8 !important;
        opacity: 1 !important;
    }

    .form-control:hover {
        background-color: #ffffff !important;
        border-color: #cbd5e1 !important;
    }

    .form-control:focus,
    .form-control:active {
        background-color: #ffffff !important;
        border-color: #11998e !important;
        color: #0f172a !important;
        box-shadow: 0 0 0 3px rgba(17, 153, 142, 0.2) !important;
        outline: none !important;
    }

    .btn-success:hover {
        opacity: 0.9;
    }
</style>
<style>
    /* Dark Mode Support */
    [data-theme='dark'] .login-page {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    [data-theme='dark'] .card {
        background-color: #1e1e2d !important;
        color: #e2e8f0;
    }

    [data-theme='dark'] .card-header {
        background-color: #1a1a27 !important;
        border-bottom-color: #2d2d3f !important;
    }

    [data-theme='dark'] .card-header h3 {
        color: #fff !important;
    }

    [data-theme='dark'] .card-body {
        background-color: #1e1e2d !important;
    }

    [data-theme='dark'] .card-footer {
        background-color: #1a1a27 !important;
    }

    [data-theme='dark'] .text-muted {
        color: #94a3b8 !important;
    }

    [data-theme='dark'] .form-control {
        background-color: #1e293b !important;
        color: #ffffff !important;
        border-color: #334155 !important;
        caret-color: #ffffff !important;
    }

    [data-theme='dark'] .form-control:-webkit-autofill,
    [data-theme='dark'] .form-control:-webkit-autofill:hover,
    [data-theme='dark'] .form-control:-webkit-autofill:focus,
    [data-theme='dark'] .form-control:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #1e293b inset !important;
        -webkit-text-fill-color: #ffffff !important;
    }

    [data-theme='dark'] .form-control::placeholder {
        color: #cbd5e1 !important;
    }

    [data-theme='dark'] .form-control:hover {
        background-color: #243049 !important;
        border-color: #475569 !important;
    }

    [data-theme='dark'] .form-control:focus {
        background-color: #1e293b !important;
        border-color: #11998e !important;
        color: #ffffff !important;
    }
</style>

@section Scripts {
    <script>
        function forceClear() {
            var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
            inputs.forEach(function (input) {
                input.value = '';
                input.dispatchEvent(new Event('input', { bubbles: true }));
            });
        }

        window.onload = function () {
            forceClear();
            setTimeout(forceClear, 200);
            setTimeout(forceClear, 500);
        };
    </script>
}
