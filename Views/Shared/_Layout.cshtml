<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserDetails</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JsonCrudApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        /* Auth Utility Box Dark Mode Override */
        [data-theme='dark'] .auth-utility-box {
            background-color: #1e1e2d !important;
            /* Dark background matching card */
            border-color: #2d2d3f !important;
            /* Dark border */
            color: #e2e8f0 !important;
            /* Light text */
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .5) !important;
        }

        /* Ensure icons inside inherit color or are specifically styled */
        [data-theme='dark'] .auth-utility-box .btn-utility {
            color: #e2e8f0;
        }

        [data-theme='dark'] .auth-utility-box .btn-utility:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Ensure form-select inside is also dark */
        [data-theme='dark'] .auth-utility-box .form-select {
            background-color: #2d2d3f;
            border-color: #3f3f50;
            color: #fff;
        }
    </style>
</head>

<body>
    @using Microsoft.AspNetCore.Http
    @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminUser")) ||
    !string.IsNullOrEmpty(Context.Session.GetString("StudentUser")))
    {
        <div class="admin-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <a asp-controller="Home" asp-action="Dashboard" class="sidebar-brand" style="text-decoration: none;">
                    <div class="brand-icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <div class="brand-text">
                        <h3>Progressly</h3>
                        <span>Workspace</span>
                    </div>
                </a>
                <div class="sidebar-user">
                    <div class="user-avatar"><i class="fas fa-user-circle"></i></div>
                    <div class="user-info">
                        <h4>@(Context.Session.GetString("AdminUser") ?? Context.Session.GetString("StudentUser") ?? "User")
                        </h4>
                        <span>@(Context.Session.GetString("AdminUser") != null ? "Administrator" : "User")</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <div class="nav-section">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Dashboard" class="nav-link">
                                    <i class="fas fa-th-large"></i>
                                    <span>Dashboard</span>
                                </a></li>
                        </ul>
                    </div>
                    <div class="nav-section">
                        <ul>
                            @if (Context.Session.GetString("Role") == "Admin" ||
                           (!string.IsNullOrEmpty(Context.Session.GetString("AdminUser")) &&
                           Context.Session.GetString("Role") != "User"))
                            {
                                <li><a asp-area="" asp-controller="Students" asp-action="Index" class="nav-link">
                                        <i class="fas fa-users-cog"></i>
                                        <span>Users</span>
                                    </a></li>
                            }
                        </ul>
                    </div>
                    <div class="nav-section nav-section-bottom">
                        <ul>
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link logout-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Logout</span>
                                </a></li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <!-- Main Content Area -->
            <div class="main-area">
                <!-- Topbar -->
                <header class="topbar">
                    <div class="topbar-left">
                        <div class="breadcrumb-wrapper">
                            <span class="breadcrumb-text"></span>
                        </div>
                    </div>
                    <div class="topbar-right">
                        <!-- Mobile Toggle -->
                        <button class="btn btn-sm d-md-none text-secondary" id="mobileUtilToggle"
                            style="width: 40px; height: 40px; border: 1px solid var(--border-dim); border-radius: 10px; background: var(--bg-tertiary); display:flex; align-items:center; justify-content:center;">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>

                        <!-- Utility Container -->
                        <div class="utility-container" id="utilityContainer">
                            <partial name="_UtilityControls" />
                        </div>
                </header>

                <!-- Content -->
                <main role="main" class="content-wrapper">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <div class="auth-wrapper">
            <!-- Auth Utility Wrapper (Floating Top Right) -->
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
                <div class="auth-utility-box d-flex align-items-center gap-2 p-2 rounded shadow-sm bg-body-tertiary border">
                    <partial name="_UtilityControls" />
                </div>
            </div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/translator.js" asp-append-version="true"></script>
    <script src="~/js/timetracker.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
