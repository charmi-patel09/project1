@using Microsoft.AspNetCore.Http
@using JsonCrudApp.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Analytics"];
    ViewData["TitleKey"] = "Analytics";
    var userEmail = Context.Session.GetString("AdminUser");
    var totalStudents = ViewBag.TotalStudents ?? 0;
    var averageAge = ViewBag.AverageAge ?? 0;
    var recentStudents = (List<Student>)ViewBag.RecentStudents ?? new List<Student>();
}

<div class="analytics-container">
    <!-- Welcome Banner -->
    <div class="welcome-banner">
        <div class="banner-content">
            <div class="banner-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="banner-text">
                <h2 data-i18n="AnalyticsDashboard">@Localizer["AnalyticsDashboard"]</h2>
                <p><span data-i18n="WelcomeBack">@Localizer["WelcomeBack"]</span>, @(userEmail ?? "Administrator").
                    <span data-i18n="HeresYourOverview">@Localizer["HeresYourOverview"]</span>
                </p>
            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon stat-icon-primary">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <span class="stat-badge stat-badge-success">
                    <i class="fas fa-arrow-up"></i> <span data-i18n="Active">@Localizer["Active"]</span>
                </span>
            </div>
            <h6 class="stat-label" data-i18n="TotalStudents">@Localizer["TotalStudents"]</h6>
            <h2 class="stat-value">@totalStudents</h2>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon stat-icon-info">
                    <i class="fas fa-calendar-alt"></i>
                </div>
            </div>
            <h6 class="stat-label" data-i18n="AverageAge">@Localizer["AverageAge"]</h6>
            <h2 class="stat-value">@String.Format("{0:F1}", averageAge)</h2>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon stat-icon-warning">
                    <i class="fas fa-book"></i>
                </div>
            </div>
            <h6 class="stat-label" data-i18n="ActiveCourses">@Localizer["ActiveCourses"]</h6>
            <h2 class="stat-value">@(((IEnumerable<dynamic>)ViewBag.CourseStats).Count())</h2>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon stat-icon-success">
                    <i class="fas fa-shield-alt"></i>
                </div>
            </div>
            <h6 class="stat-label" data-i18n="SystemStatus">@Localizer["SystemStatus"]</h6>
            <h6 class="stat-status" data-i18n="Healthy">@Localizer["Healthy"]</h6>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="content-grid">
        <!-- Recent Students Table -->
        <div class="content-card table-card">
            <div class="card-header-custom">
                <h5 data-i18n="RecentlyAddedStudents">@Localizer["RecentlyAddedStudents"]</h5>
                <a asp-controller="Students" asp-action="Index" class="btn-view-all"
                    data-i18n="ViewAll">@Localizer["ViewAll"]</a>
            </div>
            <div class="table-wrapper">
                <table class="dark-table">
                    <thead>
                        <tr>
                            <th data-i18n="Student">@Localizer["Student"]</th>
                            <th data-i18n="Course">@Localizer["Course"]</th>
                            <th data-i18n="Age">@Localizer["Age"]</th>
                            <th data-i18n="Status">@Localizer["Status"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in recentStudents)
                        {
                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-avatar">
                                            @(student.Name?.Substring(0, 1).ToUpper() ?? "S")
                                        </div>
                                        <div class="student-details">
                                            <div class="student-name">@student.Name</div>
                                            <div class="student-email">@student.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="course-badge" data-i18n="@student.Course">@student.Course</span>
                                </td>
                                <td>@student.Age</td>
                                <td>
                                    <span class="status-active">
                                        <i class="fas fa-circle"></i> <span data-i18n="Active">@Localizer["Active"]</span>
                                    </span>
                                </td>
                            </tr>
                        }
                        @if (!recentStudents.Any())
                        {
                            <tr>
                                <td colspan="4" class="empty-state" data-i18n="NoStudentsFoundDatabase">
                                    @Localizer["NoStudentsFoundDatabase"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Course Distribution -->
        <div class="content-card">
            <div class="card-header-custom">
                <h5 data-i18n="CourseDistribution">@Localizer["CourseDistribution"]</h5>
            </div>
            <div class="course-list">
                @foreach (var stat in ViewBag.CourseStats)
                {
                    var percentage = totalStudents > 0 ? (stat.Count * 100 / totalStudents) : 0;
                    <div class="course-item">
                        <div class="course-header">
                            <span class="course-name" data-i18n="@stat.Course">@stat.Course</span>
                            <span class="course-count">@stat.Count <span
                                    data-i18n="StudentsLower">@Localizer["StudentsLower"]</span></span>
                        </div>
                        <div class="progress-bar-container">
                            <div class="progress-bar-fill" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
                @if (!((IEnumerable<dynamic>)ViewBag.CourseStats).Any())
                {
                    <div class="empty-state" data-i18n="NoCoursesAvailable">@Localizer["NoCoursesAvailable"]</div>
                }
            </div>

            <div class="quick-actions">
                <div class="quick-actions-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <div class="quick-actions-content">
                    <h6 data-i18n="QuickActions">@Localizer["QuickActions"]</h6>
                    <a asp-controller="Students" asp-action="Create" class="quick-link">
                        <i class="fas fa-plus"></i> <span data-i18n="AddNewStudent">@Localizer["AddNewStudent"]</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .analytics-container {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: #e6edf3;
    }

    /* Welcome Banner */
    .welcome-banner {
        background: linear-gradient(135deg, #1c2128 0%, #2d333b 100%);
        border: 1px solid rgba(48, 54, 61, 0.8);
        border-radius: 16px;
        padding: 28px;
        margin-bottom: 28px;
        position: relative;
        overflow: hidden;
    }

    .welcome-banner::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(88, 166, 255, 0.08) 0%, transparent 70%);
        border-radius: 50%;
    }

    .banner-content {
        display: flex;
        align-items: center;
        gap: 20px;
        position: relative;
        z-index: 1;
    }

    .banner-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #58a6ff 0%, #a371f7 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: #fff;
        box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
    }

    .banner-text h2 {
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0 0 4px 0;
        color: #f0f6fc;
    }

    .banner-text p {
        margin: 0;
        color: #8b949e;
        font-size: 0.95rem;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 28px;
    }

    .stat-card {
        background: linear-gradient(135deg, #161b22 0%, #1c2128 100%);
        border: 1px solid rgba(48, 54, 61, 0.8);
        border-radius: 16px;
        padding: 24px;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        border-color: rgba(88, 166, 255, 0.3);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .stat-icon {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .stat-icon-primary {
        background: rgba(88, 166, 255, 0.15);
        color: #58a6ff;
    }

    .stat-icon-info {
        background: rgba(52, 211, 153, 0.15);
        color: #34d399;
    }

    .stat-icon-warning {
        background: rgba(251, 191, 36, 0.15);
        color: #fbbf24;
    }

    .stat-icon-success {
        background: rgba(52, 211, 153, 0.15);
        color: #34d399;
    }

    .stat-badge {
        font-size: 0.75rem;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 12px;
    }

    .stat-badge-success {
        background: rgba(52, 211, 153, 0.15);
        color: #34d399;
    }

    .stat-label {
        font-size: 0.8rem;
        color: #8b949e;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0 0 8px 0;
        font-weight: 600;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: #f0f6fc;
        margin: 0;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .stat-status {
        font-size: 1.1rem;
        font-weight: 700;
        color: #34d399;
        margin: 0;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
    }

    @@media (max-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    .content-card {
        background: linear-gradient(135deg, #161b22 0%, #1c2128 100%);
        border: 1px solid rgba(48, 54, 61, 0.8);
        border-radius: 16px;
        overflow: hidden;
    }

    .card-header-custom {
        padding: 24px;
        border-bottom: 1px solid rgba(48, 54, 61, 0.8);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-header-custom h5 {
        font-size: 1.1rem;
        font-weight: 800;
        margin: 0;
        color: #f0f6fc;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .btn-view-all {
        font-size: 0.85rem;
        font-weight: 600;
        color: #58a6ff;
        text-decoration: none;
        padding: 6px 16px;
        background: rgba(88, 166, 255, 0.1);
        border-radius: 20px;
        transition: all 0.3s ease;
    }

    .btn-view-all:hover {
        background: rgba(88, 166, 255, 0.2);
        transform: translateY(-1px);
    }

    /* Dark Table */
    .table-wrapper {
        overflow-x: auto;
    }

    .dark-table {
        width: 100%;
        border-collapse: collapse;
    }

    .dark-table thead {
        background: rgba(48, 54, 61, 0.3);
    }

    .dark-table th {
        padding: 16px 24px;
        text-align: left;
        font-size: 0.7rem;
        font-weight: 700;
        color: #8b949e;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
    }

    .dark-table td {
        padding: 16px 24px;
        border-top: 1px solid rgba(48, 54, 61, 0.5);
        color: #e6edf3;
    }

    .dark-table tbody tr {
        transition: background 0.2s ease;
    }

    .dark-table tbody tr:hover {
        background: rgba(48, 54, 61, 0.3);
    }

    .student-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .student-avatar {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #58a6ff 0%, #a371f7 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.85rem;
        color: #fff;
    }

    .student-name {
        font-weight: 700;
        color: #f0f6fc;
        font-size: 0.95rem;
    }

    .student-email {
        font-size: 0.75rem;
        color: #6e7681;
    }

    .course-badge {
        display: inline-block;
        padding: 6px 14px;
        background: rgba(88, 166, 255, 0.1);
        color: #58a6ff;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-active {
        color: #34d399;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-active i {
        font-size: 0.5rem;
        margin-right: 6px;
    }

    .empty-state {
        text-align: center;
        padding: 48px 24px;
        color: #6e7681;
        font-size: 0.9rem;
    }

    /* Course List */
    .course-list {
        padding: 24px;
    }

    .course-item {
        margin-bottom: 24px;
    }

    .course-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .course-name {
        font-weight: 700;
        font-size: 0.9rem;
        color: #f0f6fc;
    }

    .course-count {
        font-size: 0.75rem;
        color: #6e7681;
    }

    .progress-bar-container {
        height: 8px;
        background: rgba(48, 54, 61, 0.5);
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #58a6ff 0%, #a371f7 100%);
        border-radius: 10px;
        transition: width 1s ease-in-out;
    }

    /* Quick Actions */
    .quick-actions {
        margin: 24px;
        padding: 20px;
        background: rgba(48, 54, 61, 0.3);
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .quick-actions-icon {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg, #58a6ff 0%, #a371f7 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: #fff;
    }

    .quick-actions-content h6 {
        font-size: 0.85rem;
        font-weight: 700;
        margin: 0 0 6px 0;
        color: #f0f6fc;
    }

    .quick-link {
        color: #58a6ff;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .quick-link:hover {
        color: #a371f7;
    }

    .quick-link i {
        margin-right: 6px;
    }
</style>
