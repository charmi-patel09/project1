@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserDetails</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JsonCrudApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .language-selector {
            position: relative;
            display: inline-block;
            margin-left: 15px;
        }

        .lang-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .lang-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
        }

        .lang-dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            background: var(--bg-tertiary, #1c2128);
            min-width: 160px;
            box-shadow: var(--shadow-lg, 0 8px 24px rgba(0, 0, 0, 0.5));
            border-radius: 12px;
            display: none;
            z-index: 1000;
            margin-top: 10px;
            overflow: hidden;
            border: 1px solid var(--border-primary, rgba(48, 54, 61, 0.8));
            backdrop-filter: blur(10px);
        }

        .lang-search {
            padding: 8px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .lang-search input {
            width: 100%;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
        }

        .lang-list-scroll {
            max-height: 300px;
            overflow-y: auto;
        }

        .lang-item {
            padding: 12px 16px;
            color: var(--text-secondary, #8b949e);
            text-decoration: none;
            display: block;
            transition: all 0.2s ease;
            cursor: pointer;
            font-size: 0.9rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .lang-item:last-child {
            border-bottom: none;
        }

        .lang-item:hover {
            background: var(--bg-hover, #21262d);
            color: var(--text-primary, #e6edf3);
        }

        .lang-item.active {
            background: rgba(88, 166, 255, 0.1);
            color: var(--accent-primary);
            color: var(--accent-primary);
            font-weight: 600;
        }

        /* Global Dark Theme Overrides for "White Box" Issues */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
            background: #1a1a2e;
            /* Dark background for track */
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.4);
        }

        input,
        select,
        textarea {
            background-color: rgba(255, 255, 255, 0.05) !important;
            color: #e0e0e0 !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        /* Fix for potential white backgrounds in cards */
        .card,
        .tool-card,
        .news-list,
        .dropdown-menu {
            background-color: #16213e !important;
            /* Force dark navy/bg */
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%) !important;
            color: #fff !important;
        }
    </style>
</head>

<body>
    @using Microsoft.AspNetCore.Http
    @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminUser")) ||
    !string.IsNullOrEmpty(Context.Session.GetString("StudentUser")))
    {
        <div class="admin-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-brand">
                    <div class="brand-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="brand-text">
                        <h3>UserAdmin</h3>
                        <span data-i18n="UserPortal">@Localizer["UserPortal"]</span>
                    </div>
                </div>

                <div class="sidebar-user">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-info">
                        <h4>@(Context.Session.GetString("AdminUser") ?? Context.Session.GetString("StudentUser") ?? "User")
                        </h4>
                        <span data-i18n="@(Context.Session.GetString("AdminUser") != null ? "Administrator" : "User")">
                            @Localizer[Context.Session.GetString("AdminUser") != null ? "Administrator" : "User"]
                        </span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <div class="nav-section">
                        <span class="nav-section-title" data-i18n="Main">@Localizer["Main"]</span>
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Dashboard" class="nav-link">
                                    <i class="fas fa-th-large"></i>
                                    <span data-i18n="Dashboard">@Localizer["Dashboard"]</span>
                                </a></li>

                        </ul>
                    </div>

                    <div class="nav-section">
                        <span class="nav-section-title" data-i18n="Management">@Localizer["Management"]</span>
                        <ul>
                            <li><a asp-area="" asp-controller="Students" asp-action="Index" class="nav-link">
                                    <i class="fas fa-users-cog"></i>
                                    <span data-i18n="Users">@Localizer["Users"]</span>
                                </a></li>

                        </ul>
                    </div>

                    <div class="nav-section nav-section-bottom">
                        <ul>
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link logout-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span data-i18n="Logout">@Localizer["Logout"]</span>
                                </a></li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <!-- Main Content Area -->
            <div class="main-area">
                <!-- Topbar -->
                <header class="topbar">
                    <div class="topbar-left">
                        <div class="breadcrumb-wrapper">
                            <span class="breadcrumb-text" data-i18n="@ViewData["TitleKey"]">@ViewData["Title"]</span>
                        </div>
                    </div>
                    <div class="topbar-right" style="display: flex; align-items: center; gap: 15px;">
                        <!-- Dynamic Translation Module -->
                        <div class="lang-container">
                            <button class="lang-btn-new" onclick="toggleLangMenu()">
                                <i class="fas fa-language"></i>
                                <span id="currentLangLabel">Language</span>
                                <i class="fas fa-chevron-down" style="font-size: 0.7em;"></i>
                            </button>
                            <div class="lang-dropdown-menu" id="langMenu">
                                <div style="padding: 10px; border-bottom: 1px solid rgba(255,255,255,0.05);">
                                    <input type="text" placeholder="Filter languages..."
                                        style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid rgba(255,255,255,0.1); padding: 6px; border-radius: 6px; color: white; font-size: 0.8rem;"
                                        oninput="filterLanguages(this.value)">
                                </div>
                                <div id="langListContainer">
                                    <div style="padding: 15px; text-align: center; color: #888;">Loading...</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- Content -->
                <main role="main" class="content-wrapper">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <div class="auth-wrapper">
            <div style="position: absolute; top: 15px; right: 20px; z-index: 1000;">
                <div class="lang-container">
                    <button class="lang-btn-new" onclick="toggleLangMenu()"
                        style="background: rgba(255,255,255,0.2); color:white;">
                        <i class="fas fa-language"></i>
                        <span id="currentLangLabel">Language</span>
                        <i class="fas fa-chevron-down" style="font-size: 0.7em;"></i>
                    </button>
                    <div class="lang-dropdown-menu" id="langMenu">
                        <div style="padding: 10px; border-bottom: 1px solid rgba(255,255,255,0.05);">
                            <input type="text" placeholder="Filter languages..."
                                style="width: 100%; background: rgba(0,0,0,0.2); border: 1px solid rgba(255,255,255,0.1); padding: 6px; border-radius: 6px; color: white; font-size: 0.8rem;"
                                oninput="filterLanguages(this.value)">
                        </div>
                        <div id="langListContainer">
                            <div style="padding: 15px; text-align: center; color: #888;">Loading...</div>
                        </div>
                    </div>
                </div>
            </div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/translation-service.js" asp-append-version="true"></script>
    <script>
        // UI Logic for Language Menu
        const langMenu = document.getElementById('langMenu');
        const langList = document.getElementById('langListContainer');
        let allLanguages = [];

        function toggleLangMenu() {
            if (!langMenu) return;
            langMenu.classList.toggle('show');
            if (langMenu.classList.contains('show') && allLanguages.length === 0) {
                loadLanguagesUI();
            }
        }

        // Close on click outside
        document.addEventListener('click', (e) => {
            if (langMenu && !e.target.closest('.lang-container')) {
                langMenu.classList.remove('show');
            }
        });

        async function loadLanguagesUI() {
            if (!window.translator) return;

            allLanguages = await window.translator.getSupportedLanguages();
            renderLangList(allLanguages);

            // Update label
            const current = localStorage.getItem('app_lang') || 'en';
            const curObj = allLanguages.find(l => l.language === current);
            if (curObj && document.getElementById('currentLangLabel')) {
                document.getElementById('currentLangLabel').innerText = curObj.name;
            }
        }

        function renderLangList(list) {
            if (!langList) return;
            langList.innerHTML = '';
            const current = localStorage.getItem('app_lang') || 'en';

            list.forEach(l => {
                const div = document.createElement('div');
                div.className = `lang-option ${l.language === current ? 'active' : ''}`;
                div.innerHTML = `<span>${l.name}</span> <span style="opacity:0.5; font-size:0.7em">${l.language.toUpperCase()}</span>`;
                div.onclick = () => {
                    const label = document.getElementById('currentLangLabel');
                    if (label) label.innerText = l.name;
                    window.translator.setLanguage(l.language);
                    toggleLangMenu();
                };
                langList.appendChild(div);
            });
        }

        function filterLanguages(term) {
            if (!term) return renderLangList(allLanguages);
            const lower = term.toLowerCase();
            const filtered = allLanguages.filter(l => l.name.toLowerCase().includes(lower) || l.language.includes(lower));
            renderLangList(filtered);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
