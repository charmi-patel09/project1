@model JsonCrudApp.Models.ForgotPasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ForgotPassword"];
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0" data-i18n="ForgotPassword">@Localizer["ForgotPassword"]</h3>
                    <p class="text-muted small mb-0 mt-1" data-i18n="EnterEmailToResetPassword">
                        @Localizer["EnterEmailToResetPassword"]</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <i class="bi bi-x-circle-fill me-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post" autocomplete="off">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label text-muted small fw-bold"
                                data-i18n="EmailAddress">@Localizer["EmailAddress"]</label>
                            <input asp-for="Email" class="form-control bg-light border-0 shadow-none py-2"
                                data-i18n-placeholder="EnterEmail" placeholder="@Localizer["EnterEmail"]" required />
                            <span asp-validation-for="Email" class="text-danger extra-small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-primary btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); font-size: 1rem;">
                                <span data-i18n="SendResetLink">@Localizer["SendResetLink"]</span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                    <p class="text-muted extra-small mb-0"><span data-i18n="BackTo">@Localizer["BackTo"]</span> <a
                            asp-action="Login" class="text-primary text-decoration-none fw-bold"
                            data-i18n="Login">@Localizer["Login"]</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.75rem;
    }

    .form-control:focus {
        background-color: #fff !important;
        border: 1px solid #11998e !important;
    }
</style>
