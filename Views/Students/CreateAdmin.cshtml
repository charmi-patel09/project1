@model JsonCrudApp.Models.Student
@{
    ViewData["Title"] = "Create New Admin";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="table-card" style="padding: 0;">
            <div class="table-card-header">
                <h5><i class="fas fa-user-shield me-2"></i> Create New Admin</h5>
            </div>
            <div class="p-4" style="background: var(--bg-card);">
                <form asp-action="CreateAdmin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter admin name" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                        <input asp-for="Email" class="form-control"
                            placeholder="Enter admin email (Gmail recommended for OTP)" required />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="form-text text-muted">A verification code will be sent to this email.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control"
                            placeholder="Set initial password" required />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Hidden fields for defaults if strictly needed, mostly handled in controller -->

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-warning fw-bold text-white">
                            <i class="fas fa-paper-plane me-2"></i> Send OTP & Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
