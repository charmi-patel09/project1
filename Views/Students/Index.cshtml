@model IEnumerable<JsonCrudApp.Models.Student>

@{
    ViewData["Title"] = "User List";
    ViewData["TitleKey"] = "UserList";
}

<div class="users-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>User List</h1>
                <p>Manage and view all registered users</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="DailyActivity" class="btn-create"
                style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <i class="fas fa-chart-line"></i> <span>Daily Activity</span>
            </a>
            <a asp-action="Create" class="btn-create">
                <i class="fas fa-plus"></i> <span>Create New User</span>
            </a>
        </div>
    </div>

    <!-- Students Table Card -->
    <div class="table-card">
        <div class="table-card-header">
            <h5>All Users</h5>
            <div class="table-info">
                <i class="fas fa-users"></i>
                <span>@Model.Count() <span>Total</span></span>
            </div>
        </div>
        <div class="table-wrapper">
            <table class="students-table">
                <thead>
                    <tr>
                        <th>
                            <i class="fas fa-user"></i>
                            <span>Name</span>
                        </th>
                        <th>
                            <i class="fas fa-envelope"></i>
                            <span>Email</span>
                        </th>
                        <th>
                            <i class="fas fa-calendar"></i>
                            <span>Age</span>
                        </th>
                        <th>
                            <i class="fas fa-book"></i>
                            <span>Course</span>
                        </th>
                        <th class="actions-column">
                            <i class="fas fa-cog"></i>
                            <span>Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar">
                                            @(item.Name?.Substring(0, 1).ToUpper() ?? "S")
                                        </div>
                                        <span class="user-name">@Html.DisplayFor(modelItem => item.Name)</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="email-text">@Html.DisplayFor(modelItem => item.Email)</span>
                                </td>
                                <td>
                                    <span class="age-badge">@Html.DisplayFor(modelItem => item.Age)
                                        <span>Years</span></span>
                                </td>
                                <td>
                                    <span class="course-tag">@(item.Course ?? "")</span>
                                </td>
                                <td class="actions-cell">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details"
                                            title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete"
                                            title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="empty-state">
                                <div class="empty-content">
                                    <i class="fas fa-inbox"></i>
                                    <h4>No Users Found</h4>
                                    <p>Start by creating your first user record.</p>
                                    <a asp-action="Create" class="btn-create-inline">
                                        <i class="fas fa-plus"></i> <span>Create New User</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .users-container {
        font-family: var(--font-primary);
        color: var(--text-primary);
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
        padding: 28px;
        background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-active) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 16px;
        position: relative;
        overflow: hidden;
    }

    .page-header::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 250px;
        height: 250px;
        background: radial-gradient(circle, var(--border-accent) 0%, transparent 70%);
        border-radius: 50%;
        opacity: 0.3;
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 20px;
        position: relative;
        z-index: 1;
    }

    .header-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-purple) 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: #fff;
        box-shadow: 0 4px 12px var(--border-accent);
    }

    .header-text h1 {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0 0 4px 0;
        color: var(--text-primary);
    }

    .header-text p {
        margin: 0;
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .btn-create {
        position: relative;
        z-index: 1;
        background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-purple) 100%);
        color: #fff;
        padding: 12px 24px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px var(--border-accent);
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(88, 166, 255, 0.4);
        color: #fff;
    }

    .btn-create i {
        font-size: 0.9rem;
    }

    /* Table Card */
    .table-card {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-card) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

    .table-card-header {
        padding: 24px;
        border-bottom: 1px solid var(--border-primary);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(48, 54, 61, 0.2);
    }

    .table-card-header h5 {
        font-size: 1.1rem;
        font-weight: 800;
        margin: 0;
        color: var(--text-primary);
        font-family: var(--font-heading);
    }

    .table-info {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text-muted);
        font-size: 0.9rem;
        font-weight: 600;
    }

    .table-info i {
        color: var(--accent-primary);
    }

    /* Table Wrapper */
    .table-wrapper {
        overflow-x: auto;
    }

    /* Students Table */
    .users-table {
        width: 100%;
        border-collapse: collapse;
    }

    .users-table thead {
        background: rgba(48, 54, 61, 0.3);
    }

    .users-table th {
        padding: 18px 24px;
        text-align: left;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
    }

    .students-table th i {
        margin-right: 6px;
        color: var(--accent-primary);
    }

    .students-table td {
        padding: 18px 24px;
        border-top: 1px solid var(--border-secondary);
        color: var(--text-primary);
        font-size: 0.95rem;
    }

    .users-table tbody tr {
        transition: all 0.3s ease;
    }

    .users-table tbody tr:hover {
        background: var(--bg-hover);
        transform: scale(1.01);
    }

    /* User Cell */
    .user-cell {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-purple) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
        color: #fff;
        flex-shrink: 0;
    }

    .user-name {
        font-weight: 700;
        color: var(--text-primary);
    }

    .email-text {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .age-badge {
        display: inline-block;
        padding: 6px 14px;
        background: rgba(52, 211, 153, 0.15);
        color: #34d399;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .course-tag {
        display: inline-block;
        padding: 6px 14px;
        background: rgba(88, 166, 255, 0.15);
        color: var(--accent-primary);
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    /* Actions Column */
    .actions-column {
        text-align: center;
    }

    .actions-cell {
        text-align: center;
    }

    .action-buttons {
        display: inline-flex;
        gap: 8px;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .btn-edit {
        background: rgba(251, 191, 36, 0.15);
        color: #fbbf24;
        border-color: rgba(251, 191, 36, 0.3);
    }

    .btn-edit:hover {
        background: rgba(251, 191, 36, 0.25);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(251, 191, 36, 0.3);
    }

    .btn-details {
        background: rgba(88, 166, 255, 0.15);
        color: var(--accent-primary);
        border-color: rgba(88, 166, 255, 0.3);
    }

    .btn-details:hover {
        background: rgba(88, 166, 255, 0.25);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
    }

    .btn-delete {
        background: rgba(248, 81, 73, 0.15);
        color: #f85149;
        border-color: rgba(248, 81, 73, 0.3);
    }

    .btn-delete:hover {
        background: rgba(248, 81, 73, 0.25);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(248, 81, 73, 0.3);
    }

    /* Empty State */
    .empty-state {
        padding: 0 !important;
        border: none !important;
    }

    .empty-content {
        text-align: center;
        padding: 80px 40px;
    }

    .empty-content i {
        font-size: 4rem;
        color: var(--text-muted);
        margin-bottom: 20px;
    }

    .empty-content h4 {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 8px 0;
    }

    .empty-content p {
        color: var(--text-muted);
        margin: 0 0 24px 0;
        font-size: 0.95rem;
    }

    .btn-create-inline {
        background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-purple) 100%);
        color: #fff;
        padding: 12px 24px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px var(--border-accent);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-create-inline:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(88, 166, 255, 0.4);
        color: #fff;
    }

    /* Responsive */
    @@media(max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 20px;
            align-items: flex-start;
        }

        .users-table {
            font-size: 0.85rem;
        }

        .users-table th,
        .users-table td {
            padding: 12px 16px;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>
