<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserDetails</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JsonCrudApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    @using Microsoft.AspNetCore.Http
    @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminUser")) ||
    !string.IsNullOrEmpty(Context.Session.GetString("StudentUser")))
    {
        <div class="admin-wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-user">
                    <div class="user-avatar"><i class="fas fa-user-circle"></i></div>
                    <div class="user-info">
                        <h4>@(Context.Session.GetString("AdminUser") ?? Context.Session.GetString("StudentUser") ?? "User")
                        </h4>
                        <span>@(Context.Session.GetString("AdminUser") != null ? "Administrator" : "User")</span>
                    </div>
                </div>

                <nav class="sidebar-nav">
                    <div class="nav-section">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Dashboard" class="nav-link">
                                    <i class="fas fa-th-large"></i>
                                    <span>Dashboard</span>
                                </a></li>
                        </ul>
                    </div>
                    <div class="nav-section">
                        <ul>
                            <li><a asp-area="" asp-controller="Students" asp-action="Index" class="nav-link">
                                    <i class="fas fa-users-cog"></i>
                                    <span>Users</span>
                                </a></li>
                        </ul>
                    </div>
                    <div class="nav-section nav-section-bottom">
                        <ul>
                            <li><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link logout-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Logout</span>
                                </a></li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <!-- Main Content Area -->
            <div class="main-area">
                <!-- Topbar -->
                <header class="topbar">
                    <div class="topbar-left">
                        <div class="breadcrumb-wrapper">
                            <span class="breadcrumb-text"></span>
                        </div>
                    </div>
                    <div class="topbar-right" style="display: flex; align-items: center; gap: 15px;">

                        <!-- Time Tracker Component -->
                        <div class="time-tracker-container" style="position: relative; margin-right: 15px;">
                            <!-- Timer Display (Always Visible) -->
                            <div id="navbarTimer" class="navbar-timer"
                                style="display: flex; align-items: center; gap: 8px; cursor: pointer; padding: 6px 12px; border-radius: 20px; transition: all 0.3s ease;">
                                <i class="fas fa-play" id="timerIcon"
                                    style="font-size: 0.8rem; color: var(--bs-primary);"></i>
                                <span id="timerDisplay"
                                    style="font-family: monospace; font-weight: 600; font-size: 0.95rem;">00:00:00</span>
                            </div>

                            <!-- Timer Dropdown (Hidden) -->
                            <div id="timerDropdown" class="timer-dropdown shadow-lg"
                                style="display: none; position: absolute; top: 120%; right: 0; width: 320px; background: var(--bs-body-bg); border: 1px solid var(--bs-border-color); border-radius: 12px; padding: 16px; z-index: 1000;">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="m-0 fw-bold">Time Tracker</h6>
                                    <a href="/TimeTracker" class="text-decoration-none small">View All</a>
                                </div>

                                <!-- Task Input -->
                                <div class="mb-3 position-relative">
                                    <input type="text" id="timerTaskInput" class="form-control form-control-sm"
                                        placeholder="What are you working on?">
                                    <div id="recentTasksList" class="list-group mt-1 shadow-sm"
                                        style="display:none; position: absolute; width: 100%; z-index: 1001; max-height: 150px; overflow-y: auto;">
                                    </div>
                                    <div class="invalid-feedback">Please enter a task name.</div>
                                </div>

                                <!-- Timer Big Display -->
                                <div class="text-center mb-4">
                                    <div id="timerDisplayBig" class="display-6 fw-bold font-monospace">00:00:00</div>
                                    <p id="timerStatus" class="text-muted small mb-0">Stopped</p>
                                </div>

                                <!-- Controls -->
                                <div class="d-flex justify-content-center gap-2">
                                    <button id="btnTimerStart" class="btn btn-primary btn-sm rounded-pill px-4"><i
                                            class="fas fa-play me-1"></i> Start</button>
                                    <button id="btnTimerPause" class="btn btn-warning btn-sm rounded-pill px-4"
                                        style="display:none;"><i class="fas fa-pause me-1"></i> Pause</button>
                                    <button id="btnTimerStop" class="btn btn-danger btn-sm rounded-pill px-4" disabled><i
                                            class="fas fa-stop me-1"></i> Stop</button>
                                </div>
                            </div>
                        </div>

                        <select class="form-select form-select-sm" id="languageSelector"
                            onchange="Translator.setLanguage(this.value)"
                            style="width: auto; cursor: pointer; margin-right: 12px;">
                            <option value="en">English</option>
                            <option value="es">Español (Spanish)</option>
                            <option value="fr">Français (French)</option>
                            <option value="de">Deutsch (German)</option>
                            <option value="hi">हिन्दी (Hindi)</option>
                            <option value="gu">ગુજરાતી (Gujarati)</option>
                            <option value="zh">中文 (Chinese)</option>
                            <option value="ja">日本語 (Japanese)</option>
                            <option value="ru">Русский (Russian)</option>
                            <option value="ar">العربية (Arabic)</option>
                        </select>

                        <!-- Theme Toggle -->
                        <button id="themeToggle" class="btn btn-sm btn-outline-secondary"
                            style="border-radius: 50%; width: 32px; height: 32px; padding: 0; display:flex; align-items:center; justify-content:center;">
                            <i class="fas fa-moon"></i>
                        </button>

                        <script>
                            (function () {
                                const toggle = document.getElementById('themeToggle');
                                const icon = toggle.querySelector('i');
                                const html = document.documentElement;

                                // 1. Load Saved Theme
                                const saved = localStorage.getItem('appTheme') || 'dark';
                                html.setAttribute('data-theme', saved);
                                updateIcon(saved);

                                // 2. Toggle Handler
                                toggle.addEventListener('click', () => {
                                    const current = html.getAttribute('data-theme');
                                    const next = current === 'dark' ? 'light' : 'dark';

                                    html.setAttribute('data-theme', next);
                                    localStorage.setItem('appTheme', next);
                                    updateIcon(next);
                                });

                                function updateIcon(theme) {
                                    if (theme === 'dark') {
                                        icon.className = 'fas fa-moon';
                                        toggle.classList.remove('btn-warning');
                                        toggle.classList.add('btn-outline-secondary');
                                        toggle.style.color = '';
                                    } else {
                                        icon.className = 'fas fa-sun';
                                        toggle.classList.remove('btn-outline-secondary');
                                        toggle.classList.add('btn-warning');
                                        toggle.style.color = 'orange'; // ensure visible
                                    }
                                }
                            })();
                        </script>
                    </div>
                </header>

                <!-- Content -->
                <main role="main" class="content-wrapper">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <div class="auth-wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/translator.js" asp-append-version="true"></script>
    <script src="~/js/timetracker.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
