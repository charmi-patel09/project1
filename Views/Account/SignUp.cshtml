@model JsonCrudApp.Models.SignUpViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0">Create Account</h3>
                    <p class="text-muted small mb-0 mt-1">Create Account</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="SignUp" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted small fw-bold">Email</label>
                            <input asp-for="Email" class="form-control shadow-none py-2" placeholder="Enter your email"
                                required autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted small fw-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control shadow-none py-2"
                                placeholder="Enter your password" required autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label text-muted small fw-bold">Confirm
                                Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control shadow-none py-2"
                                placeholder="Enter confirm password" required autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SecurityPin" class="form-label text-muted small fw-bold">Security PIN (4-6
                                digits) <span class="fw-normal opacity-75">(Optional)</span></label>
                            <input asp-for="SecurityPin" type="password" class="form-control shadow-none py-2"
                                placeholder="••••" autocomplete="off" maxlength="6" />
                            <span asp-validation-for="SecurityPin" class="text-danger extra-small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmSecurityPin" class="form-label text-muted small fw-bold">Confirm
                                PIN <span class="fw-normal opacity-75">(Optional)</span></label>
                            <input asp-for="ConfirmSecurityPin" type="password" class="form-control shadow-none py-2"
                                placeholder="••••" autocomplete="off" maxlength="6" />
                            <span asp-validation-for="ConfirmSecurityPin" class="text-danger extra-small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-primary btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); font-size: 1rem;">
                                <span>Register</span>
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted small mb-0">
                            <span>Already have an account?</span>
                            <a asp-action="Login" class="text-primary fw-bold text-decoration-none">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.7rem;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.01);
    }

    .form-control {
        background-color: #f8fafc !important;
        color: #0f172a !important;
        /* Black/Dark Navy for light theme */
        border: 1px solid #e2e8f0 !important;
        transition: all 0.2s ease-in-out !important;
        caret-color: #0f172a !important;
    }

    /* Standard Autofill for light mode */
    .form-control:-webkit-autofill,
    .form-control:-webkit-autofill:hover,
    .form-control:-webkit-autofill:focus,
    .form-control:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #f8fafc inset !important;
        -webkit-text-fill-color: #0f172a !important;
    }

    .form-control::placeholder {
        color: #94a3b8 !important;
        opacity: 1 !important;
    }

    .form-control:hover {
        background-color: #ffffff !important;
        border-color: #cbd5e1 !important;
    }

    .form-control:focus,
    .form-control:active {
        background-color: #ffffff !important;
        border-color: #2575fc !important;
        color: #0f172a !important;
        box-shadow: 0 0 0 3px rgba(37, 117, 252, 0.2) !important;
        outline: none !important;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>
<style>
    /* Dark Mode Support */
    [data-theme='dark'] .login-page {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }

    [data-theme='dark'] .card {
        background-color: #1e1e2d !important;
        color: #e2e8f0;
    }

    [data-theme='dark'] .card-header {
        background-color: #1a1a27 !important;
        border-bottom-color: #2d2d3f !important;
    }

    [data-theme='dark'] .card-header h3,
    [data-theme='dark'] .card-header .text-dark {
        color: #fff !important;
    }

    [data-theme='dark'] .card-body {
        background-color: #1e1e2d !important;
    }

    [data-theme='dark'] .text-muted {
        color: #94a3b8 !important;
    }

    [data-theme='dark'] .form-control {
        background-color: #1e293b !important;
        color: #ffffff !important;
        /* White text for dark theme */
        border-color: #334155 !important;
        caret-color: #ffffff !important;
    }

    [data-theme='dark'] .form-control:-webkit-autofill,
    [data-theme='dark'] .form-control:-webkit-autofill:hover,
    [data-theme='dark'] .form-control:-webkit-autofill:focus,
    [data-theme='dark'] .form-control:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #1e293b inset !important;
        -webkit-text-fill-color: #ffffff !important;
    }

    [data-theme='dark'] .form-control::placeholder {
        color: #cbd5e1 !important;
    }

    [data-theme='dark'] .form-control:hover {
        background-color: #243049 !important;
        border-color: #475569 !important;
    }

    [data-theme='dark'] .form-control:focus {
        background-color: #1e293b !important;
        border-color: #2575fc !important;
        color: #ffffff !important;
    }

    [data-theme='dark'] .bg-light {
        background-color: #1a1a27 !important;
    }

    [data-theme='dark'] .bg-white {
        background-color: #1e1e2d !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.onload = function () {
            // Only clear if there are no validation errors visible
            if (document.querySelectorAll('.field-validation-error').length === 0) {
                var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
                inputs.forEach(function (input) {
                    input.value = '';
                });
            }
        };
    </script>
}
