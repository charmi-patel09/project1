@model JsonCrudApp.Models.AdminUser
@{
    ViewData["Title"] = "Student Login";
}

<div class="container-fluid login-page">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-11 col-sm-8 col-md-5 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-light py-4 text-center border-0 border-bottom">
                    <h3 class="text-dark fw-bold mb-0">Student Login</h3>
                    <p class="text-muted small mb-0 mt-1">Please sign in with your student credentials</p>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 mb-4 py-2 px-3 small" role="alert">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    @ViewBag.ErrorMessage
                                </div>
                                <a asp-action="ForgotPassword"
                                    class="btn btn-sm btn-outline-danger border-0 fw-bold py-0">Forgot?</a>
                            </div>
                        </div>
                    }

                    <form asp-action="StudentLogin" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted small fw-bold">Student Email</label>
                            <input asp-for="Email" class="form-control bg-light border-0 shadow-none py-2"
                                placeholder="enter email" required autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted small fw-bold">Password</label>
                            <input asp-for="Password" type="password"
                                class="form-control bg-light border-0 shadow-none py-2" placeholder="enter password"
                                required autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="text-end mb-4">
                            <a asp-action="ForgotPassword"
                                class="text-success extra-small text-decoration-none fw-bold">Forgot Password?</a>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit"
                                class="btn btn-success btn-lg rounded-3 py-2 fw-bold transition-all shadow-sm border-0"
                                style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); font-size: 1rem;">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                    <span class="text-muted extra-small">Â© @DateTime.Now.Year Secure Student Portal</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page {
        background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .extra-small {
        font-size: 0.75rem;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: scale(1.01);
    }

    .form-control:focus {
        background-color: #fff !important;
        border: 1px solid #11998e !important;
    }

    .btn-success:hover {
        opacity: 0.9;
    }
</style>

@section Scripts {
    <script>
        function forceClear() {
            var inputs = document.querySelectorAll('input:not([type="submit"]):not([type="hidden"])');
            inputs.forEach(function (input) {
                input.value = '';
                input.dispatchEvent(new Event('input', { bubbles: true }));
            });
        }

        window.onload = function () {
            forceClear();
            setTimeout(forceClear, 200);
            setTimeout(forceClear, 500);
        };
    </script>
}
