@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 60vh;">
    <div class="text-center">
        <div style="font-size: 5rem; color: #ef4444; margin-bottom: 20px;">
            <i class="fas fa-lock"></i>
        </div>
        <h1 class="display-4 fw-bold">Access Denied</h1>
        <p class="lead mb-4" style="color: var(--text-muted);">
            You do not have permission to view this page.
        </p>
        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary px-4 py-2">
            <i class="fas fa-arrow-left me-2"></i> Return to Dashboard
        </a>
    </div>
</div>
